<%- include('./base/header.ejs') %>
    <div class="container">
      <div class="alert bg-success my-1">
        <h4 class="text-center" style="color: white;">Student List</h4>
      </div>
    </div>
    <div class="container">
        <div class="row">
            <table class="table text-center">
                <thead>
                    <tr>
                        <th>Roll No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Father Name</th>
                        <th>Adhar Card</th>
                        <th>Mobile No</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <% students.forEach((student)=> { %>
                    <tr>
                        <td><%= student.rollNo %></td>
                        <td><%= student.firstName %></td>
                        <td><%= student.lastName %></td>
                        <td><%= student.fatherName %></td>
                        <td><%= student.adharCardNo %></td>
                        <td><%= student.mobileNo %></td>
                        <td><a href="/student/edit/page/<%= student.id %>" class="btn btn-warning w-75">Edit</a></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
<%- include('./base/footer.ejs') %>