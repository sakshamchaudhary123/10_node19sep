<%- include('./base/header.ejs') %>
  <div class="container">
    <div class="alert bg-success my-1">
      <h4 class="text-center" style="color: white;">Update Student</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col"></div>
      <div class="col">
        <form action="/update/student/<%= student._id %>" method="post">
          <div>
            <label class="form-label">Roll No</label>
            <input type="text" name="rollNo" value="<% student.rollNo %>" class="form-control" style="border: 1px solid black; ">
          </div>
          <div>
            <label class="form-label">First Name</label>
            <input type="text" name="firstName" value="<% student.firstName %>" class="form-control" style="border: 1px solid black;">
          </div>
          <div>
            <label class="form-label">Last Name</label>
            <input type="text" name="lastName" value="<% student.lastName %>" class="form-control" style="border: 1px solid black;">
          </div>
          <div>
            <label class="form-label">Father Name</label>
            <input type="text" name="fatherName" value="<% student.fatherName %>" class="form-control" style="border: 1px solid black;">
          </div>
          <div>
            <label class="form-label">Adhar Card No</label>
            <input type="text" name="adharCardNo" value="<% student.adharCardNo %>" class="form-control" style="border: 1px solid black;">
          </div>
          <div>
            <label class="form-label">Mobile No</label>
            <input type="text" name="mobileNo" value="<% student.mobileNo %>" class="form-control" style="border: 1px solid black;">
          </div>
          <input type="submit" value="update Student" class="btn btn-warning w-100 my-3" >
        </form>
      </div>
      <div class="col"></div>
    </div>
  </div>
<%- include('./base/footer.ejs') %>
